<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1>Add a Hike</h1>
    <%= form_for @hike do |f| %>
      <div class="form-group">
        <label>Hike Name</label>
        <%= f.text_field :name, class: "form-control", placeholder: "Hike Name" %>
      </div>
       <div class="form-group">
        <label>Address</label>
        <%= f.text_field :address, class: "form-control", placeholder: "Address" %>
      </div>
       <div class="form-group">
        <label>Distance</label>
        <%= f.text_field :distance, class: "form-control", placeholder: "Miles" %>
      </div>
       <div class="form-group">
        <label>Difficuly Level</label>
        <%= f.text_field :difficulty, class: "form-control", placeholder: "1 (Beginner) - 5 (Advanced)" %>
      </div>
       <div class="form-group">
        <label>Photo</label>
        <%= f.text_field :photo, class: "form-control", placeholder: "Image URL" %>
      </div>
      <div class="form-group" id="dog-friendly-check">
        <label class="form-check-label" for="dog-friendly-check">Dog Friendly?</label>  
        <%= f.check_box :dog_friendly, as: :boolean, class: "form-check"%>   
      </div>
      <%= f.submit "Add Hike", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>