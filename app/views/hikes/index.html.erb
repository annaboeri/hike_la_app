<h1>Hikes</h1>
<div class="container">
   <% @hikes.in_groups_of(2, false).each do |group| %>
    <div class="row">
        <% group.each do |hike| %>
            <div class="col-md-6">
                <h2><%= link_to hike.name, hike_path(hike.id) %></h2>
                <img src="<%= hike.photo %>" class="browse-hikes-image"><br>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#<%= hike.name %>">
                See details
                </button>
                <!-- Modal -->
                <div class="modal fade" id="<%= hike.name %>" tabindex="-1" role="dialog" aria-labelledby="<%= hike.name %>CenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle"><%= hike.name %></h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <div class="modal-body">
                        Address: <%= hike.address %><br>
                        Distance: <%= hike.distance %> miles<br>
                        Difficulty Level:<% case hike.difficulty
                            when 1 %> Easy
                            <% when 2 %> Moderate
                            <% when 3 %> Challenging
                            <% when 4 %> Difficult
                            <% when 5 %> Very Difficult
                        <% end %><br>
                        <% if hike.dog_friendly == true %>
                        Dog-friendly 
                        <% end %>
                    </div>
                    <div class="modal-footer">
                        <%= render '/partials/add_to_profile_buttons' %>
                    </div>
                    </div>
                </div>
                </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>